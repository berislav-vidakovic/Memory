@using Frontend.Models
@using Frontend.Services
@using Shared.DTOs
@inherits LayoutComponentBase
@inject NotificationService NotificationService
@inject AuthService AuthService
@inject HttpClient Http
@inject AppState AppState
@inject UserApiService UserService


<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("App is starting ... ");

        await NotificationService.StartAsync();
        Console.WriteLine("Notification Service started... ");

        //await AuthService.RestoreSessionAsync(Http);
        if (!AppState.Users.Any())
        {
            var users = await UserService.GetUsersAsync();
            AppState.SetUsers(users);
        }
        Console.WriteLine("Users loaded ... ");


        UserLoginDto? userDto = await AuthService.RestoreSessionAsync();
        if (userDto != null)
        {
            AppState.SetCurrentUser(userDto.Id);

            Console.WriteLine("Session restored ... ");

        }
        else
            Console.WriteLine("...Refresh check failed!");

    }
   
}

}