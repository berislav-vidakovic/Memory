@using Frontend.Common
@using Microsoft.AspNetCore.Components.Forms
@using System.Threading.Tasks

@if (Show)
{
    <div class="modal-backdrop"></div>

    <div class="modal show d-block">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">

                    <InputRadioGroup @bind-Value="SelectedLoginType">

                        
                        <br />
                        <div class="form-check">
                            <InputRadio class="form-check-input"
                                        Value="LoginType.Centralized" />
                            <label class="form-check-label">
                                Centralized AuthServer Login
                            </label>
                        </div>
                        <br />

                        <div class="form-check mt-2">
                            <InputRadio class="form-check-input"
                                        Value="LoginType.OIDC" />
                            <label class="form-check-label">
                                OpenID Connect (OIDC) Login
                            </label>
                        </div>

                    </InputRadioGroup>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary"
                            @onclick="Confirm"
                            autofocus>
                        Confirm
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Title { get; set; } = "Login Type";
    [Parameter] public EventCallback<LoginType> OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private LoginType SelectedLoginType { get; set; } = LoginType.Centralized;


    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync(SelectedLoginType); // passing argument        
    }

    private async Task Close()
    {
        await OnCancel.InvokeAsync();
    }
}
