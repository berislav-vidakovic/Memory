@page "/usersPage"
@inject Frontend.Services.UserApiService UserService

@using Frontend.Components
@using Frontend.ViewModels

@inherits UsersPageViewModel;




<PageTitle>Users Page</PageTitle>

<h1>Users</h1>
<hr />

@if( CurrentUserId == null ) 
{
    <h3>You are not logged in</h3>
}
else
{
    <h3>Welcome, AllUsers.FirstOrDefault(u => u.Id == CurrentUserId)!.FullName !</h3>

}    


<button class="btn btn-primary mt-2" @onclick="OpenLoginDialog" disabled=@(CurrentUserId != null)>
        Login
    </button>
<button class="btn btn-primary mt-2" @onclick=Logout disabled=@(CurrentUserId == null)>
        Logout
    </button>
<button class="btn btn-primary mt-2" @onclick="() => EditCurrentUser()" disabled=@(CurrentUserId == null)>
        Edit User
    </button>
    <button class="btn btn-primary mt-2" @onclick="Register">
        Register
    </button>
<hr />

@if (vm == null)
{
    <p>Loading...</p>
}
else if (AllUsers.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in AllUsers)
            {
                <tr
                    @ondblclick="() => EditUser(user.Id)">
                    <td>@user.FullName</td>
                    <td>@(user.IsOnline ? "Online" : "Offline")</td>
                </tr>
            }
        </tbody>
    </table>
}

<LoginDialog Show="ShowLoginDialog"
             OfflineUsers="OfflineUsers"
             OnConfirm="HandleLoginConfirm"
             OnCancel="LoginCancel" />

<EditUserDlg 
    Vm="vm" 
    AllUsers="vm!.AllUsers" 
 />



@code {



    private UsersPageViewModel? vm;

    protected override async Task OnInitializedAsync()
    {

        vm = this;
        OnStateChanged += () =>
        {
            InvokeAsync(StateHasChanged);
        };

        await LoadUsersAsync();
    }
    


    // need to keep currently for backward compatibility (legacy)
    private async Task EditUser(int? userId)
    {
        Console.WriteLine("EditUser clicked");
        EditUserId = userId;
        ShowPwdDialog = true;
        StateHasChanged();
    }

    private async Task EditCurrentUser()
    {
        Console.WriteLine("EditUser clicked");
        EditUserId = CurrentUserId;
        ShowPwdDialog = true;
        StateHasChanged();
    }

    private async Task Register()
    {
        Console.WriteLine("Register clicked");
        StateHasChanged();
    }

    private async Task HandleLoginConfirm((string login, string password) data)
    {
        SelectedLogin = data.login;
        Password = data.password;

        await LoginOk();
    }

}
