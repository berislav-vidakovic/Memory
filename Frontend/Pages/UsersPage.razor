@page "/usersPage"


@using Frontend.Components
@using Frontend.Models
@using Frontend.Services
@using Frontend.ViewModels
@using Shared
@using Shared.DTOs

@inherits UsersPageViewModel;

@inject Frontend.Services.UserApiService UserService1
@inject NotificationService NotificationService



<PageTitle>Users Page</PageTitle>

<h1>Users</h1>
<hr />

@if( CurrentUserId == null ) 
{
    <h3>You are not logged in</h3>
}
else
{
    <h3>Welcome, @(AllUsers.FirstOrDefault(u => u.Id == CurrentUserId)!.FullName)!</h3>

}    


<button class="btn btn-primary mt-2" @onclick="OpenLoginDialog" disabled=@(CurrentUserId != null)>
        Login
    </button>
<button class="btn btn-primary mt-2" @onclick=Logout disabled=@(CurrentUserId == null)>
        Logout
    </button>
<button class="btn btn-primary mt-2" @onclick="() => EditUser(CurrentUserId)" disabled=@(CurrentUserId == null)>
        Edit User
    </button>
    <button class="btn btn-primary mt-2" @onclick="Register">
        Register
    </button>
<hr />

@if (AllUsers == null || AllUsers.Count == 0)
{
    <p>Loading users ...</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in AllUsers)
            {
                <tr
                    @ondblclick="() => EditUser(user.Id)"
                    @oncontextmenu="(e) => OnRowRightClick(e, user.Id)"
                    @oncontextmenu:preventDefault="true">
                    <td>@user.FullName</td>
                    <td>
                        <span class="badge @(user.IsOnline ? "bg-success" : "bg-light text-dark")">
                            @(user.IsOnline ? " Online " : " Offline ")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<LoginDialog Show="ShowLoginDialog"
             OfflineUsers="OfflineUsers"
             OnConfirm="HandleLoginConfirm"
             OnCancel="LoginCancel"/>

@if (EditUserId != null)
{
    <UserDialog SelectedUser="@AllUsers!.FirstOrDefault(u => u.Id == EditUserId)"
                ShowEditUserDialog="@ShowPwdDialog"    
                OnSubmit="HandleUserUpdate"
                OnCancel="CloseDialog" 
                OnDelete="DeleteUser" 
                UpdatePassword="false"/>

}

@if (ShowContextMenu)
{
    <div class="context-menu"
         style="position:fixed; top:@(ContextMenuY + "px"); left:@(ContextMenuX + "px");"
         @onclick="() => ShowContextMenu = false">

        <button class="dropdown-item"
                @onclick="() => EditUserForm(ContextMenuUserId)">
            Edit User
        </button>
    </div>
}

@if (ShowDockedEditor && DockedUserId != null)
{
    <div class="dock-overlay" @onclick="CloseDockedEditor"></div>

    <div class="dock-panel">
        <div class="dock-header">
            <h5>Edit User</h5>
            <button class="btn btn-sm btn-secondary" @onclick="CloseDockedEditor">X</button>
        </div>

        <UserForm SelectedUser="@AllUsers!.FirstOrDefault(u => u.Id == DockedUserId)"
                  ShowEditUserDialog="@ShowDockedEditor"
                  AllUsers="@AllUsers"
                  CurrentUserId="@CurrentUserId"
                  UpdatePassword="false" 
                  OnClose="CloseDockedEditor" />
    </div>
}



@code {
    private bool ShowDockedEditor;
    private int? DockedUserId;
    private bool ShowContextMenu;
    private double ContextMenuX;
    private double ContextMenuY;
    private int ContextMenuUserId;

    private void CloseDockedEditor()
    {
        ShowDockedEditor = false;
        DockedUserId = null;
    }

    private void OnRowRightClick(MouseEventArgs e, int userId)
    {
        ContextMenuUserId = userId;
        ContextMenuX = e.ClientX;
        ContextMenuY = e.ClientY;
        ShowContextMenu = true;

        StateHasChanged();

    }

    private void EditUserForm(int userId)
    {
        ShowContextMenu = false;
        
        Console.WriteLine("EditUserForm called for userId=" + userId);

        DockedUserId = userId;
        ShowDockedEditor = true;
        StateHasChanged();

    }


    private async Task DeleteUser(EditUser edited)
    {
        var user = AllUsers.FirstOrDefault(u => u.Id == edited.Id);
        if (user == null)
            return;
        Console.WriteLine("delete User " + edited.Id);

        UserLoginDto loginBody = new UserLoginDto
        {
            Id = edited.Id,
            PwdHashed = ""
        };

        bool bSuccess = await UserService.DeleteAsync(loginBody);
        if (bSuccess)
        {
            if (CurrentUserId == edited.Id)
                CurrentUserId = null;
            AllUsers.Remove(user);

        }

        ShowPwdDialog = false;
    }

    private async Task HandleUserUpdate(EditUser edited)
    {
        var user = AllUsers.FirstOrDefault(u => u.Id == edited.Id);
        if (user == null)
            return;


        bool isLoginChanged = user.Login != edited.Login;
        bool isFullNameChanged = user.FullName != edited.FullName;

        bool isPasswordChanged = edited.IsPasswordUpdated;

        if( isPasswordChanged )
        {
            string currPwd = HashUtil.HashClient(edited.CurrentPassword);
            bool valid = HashUtil.VerifyPasswordServer(currPwd, user.HashedPwd);
            if (!valid)
            {
                Console.WriteLine(" *** Invalid password");
                ShowPwdDialog = false;

                return;
            }
            Console.WriteLine(" *** Valid password, will be updated");

        }

        UserDto dtoUser = new()
        {
            Id = edited.Id,
            FullName = edited.FullName,
            Login = edited.Login,
            HashedPwd = HashUtil.HashClient(edited.NewPassword),
            IsPasswordUpdated = edited.IsPasswordUpdated
        };
        UserDto? dto = await UserService.EditUserAsync(dtoUser);
        Console.WriteLine("User updated? " + dto != null);
        if( dto != null)
        {
            user.Login = dto.Login;
            user.FullName = dto.FullName;
            if (dto.IsPasswordUpdated)
                user.HashedPwd = dto.HashedPwd;
        }

        ShowPwdDialog = false;
    }

    private void CloseDialog()
    {
        ShowPwdDialog = false;
    }



    protected override async Task OnInitializedAsync()
    {

        OnStateChanged += () =>
        {
            InvokeAsync(StateHasChanged);
        };

        await LoadUsersAsync();

        NotificationService.OnUserLoggedIn += HandleUserLoggedIn;
    }

    private void HandleUserLoggedIn(int userId)
    {
        var user = AllUsers?.FirstOrDefault(u => u.Id == userId);
        if (user != null)
        {
            user.IsOnline = true;
            InvokeAsync(StateHasChanged);
        }
    }

    


    private async Task EditUser(int? userId)
    {
        Console.WriteLine("EditUser clicked userId=" +userId);
        EditUserId = userId;
        ShowPwdDialog = true;
        StateHasChanged();
    }




    private async Task Register()
    {
        Console.WriteLine("Register clicked");
        StateHasChanged();
    }

    private async Task HandleLoginConfirm((int id, string password) data)
    {
        SelectedId= data.id;
        Password = data.password;

        await LoginOk();
    }

}
